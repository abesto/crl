{
  "C_Cpp.vcpkg.enabled": true,
  "cmake.sourceDirectory": "${workspaceFolder}",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "xaver.clang-format",
  "editor.rulers": [120],
  "cmake.configureArgs": [
    "-Wdev",
    "-Wdeprecated"
    //"--warn-uninitialized",
  ],
  "cmake.configureSettings": {
    "CMAKE_TOOLCHAIN_FILE": "${workspaceFolder}/vcpkg/scripts/buildsystems/vcpkg.cmake"
    //"VCPKG_TARGET_TRIPLET": "x64-windows-static",
  },
  "cmake.buildEnvironment": {
    //"VERBOSE": "1",
  },
  "terminal.integrated.env.windows": {
    "VCPKG_ROOT": "${workspaceFolder}/vcpkg"
  },
  "terminal.integrated.env.osx": {
    "VCPKG_ROOT": "${workspaceFolder}/vcpkg"
  },
  "terminal.integrated.env.linux": {
    "VCPKG_ROOT": "${workspaceFolder}/vcpkg"
  },
  "cSpell.words": ["entt", "SDLK"],
  "files.associations": {
    "atomic": "cpp",
    "deque": "cpp",
    "ios": "cpp",
    "list": "cpp",
    "system_error": "cpp",
    "vector": "cpp",
    "xhash": "cpp",
    "xiosbase": "cpp",
    "xstring": "cpp",
    "xtree": "cpp",
    "utility": "cpp",
    "array": "cpp",
    "tuple": "cpp",
    "variant": "cpp",
    "istream": "cpp",
    "memory": "cpp",
    "type_traits": "cpp",
    "xlocnum": "cpp",
    "xutility": "cpp"
  }
}
